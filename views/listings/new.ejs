<% layout("layouts/boilerplate.ejs") -%>
<body>
  <div class="flex flex-col items-center justify-center gap-2 ">
    <h1 class="font-semibold text-gray-700 text-3xl my-4">
      Create a New Listing
    </h1>
    <div class="lg:w-[80%] md:w-[70%] w-[80%]  mx-auto">
      <form
        id="myForm"
        method="post"
        action="/listings"
        enctype="multipart/form-data"
      >
        <div class="text-red-500" id="errorMessage" style="display: none">
          Please fill out all fields.
        </div>
        <div class="flex flex-col gap-3 justify-center">
          <label for="title">Title</label>
          <input
            id="title"
            name="listing[title]"
            type="text"
            placeholder="Enter title"
            class="border-2 border-gray-300 bg-white p-2 rounded-md"
            required
          />
          <label for="description">Description</label>
          <textarea
            id="description"
            name="listing[description]"
            type="text"
            placeholder="Enter description"
            class="border-2 border-gray-300 p-2 bg-white rounded-md"
            required
          ></textarea>
          <label for="image">Upload Listing Image</label>
          <input
            id="image"
            name="listing[image]"
            type="file"
            placeholder="Enter image url"
            class="border-2 border-gray-300 p-2 bg-white rounded-md"
          />
          <div class="flex sm:flex-row flex-col gap-2">
            <label for="price">Price</label>
            <input
              id="price"
              name="listing[price]"
              type="text"
              placeholder="enter price/night"
              class="border-2 border-gray-300 p-2 bg-white rounded-md"
              required
            />
            <select
              name="listing[category]"
              class="block w-full mt-1 p-2 border-2 border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"
            >
              <option value="Trending" disabled selected>Select a Category</option>
              <option  value="Trending">Trending</option>
              <option value="Single Rooms">Single Rooms</option>
              <option value="Mountain">Mountain</option>
              <option value="Farm">Farm</option>
              <option value="Castle">Castle</option>
              <option value="Camping">Camping</option>
              <option value="Amazing Pools">Amazing Pools</option>
              <option value="Igloos">Igloos</option>
            </select>
          </div>
          <div class="flex md:flex-row flex-col gap-2">
            <label for="location">Location</label>
            <input
              id="location"
              name="listing[location]"
              type="text"
              placeholder="enter location"
              class="border-2 border-gray-300 p-2 bg-white rounded-md"
              required
            />
            <label for="country">Country</label>
            <input
              id="country"
              name="listing[country]"
              type="text"
              placeholder="enter country"
              class="border-2 border-gray-300 p-2 bg-white rounded-md"
            />
          </div>
          <button
            type="submit"
            class="bg-orange-500 rounded-md text-white py-2 px-3"
          >
            Add
          </button>
        </div>
      </form>
    </div>
  </div>
</body>
