<% layout("layouts/boilerplate.ejs") -%>
<body>
  <div
    class="flex flex-col gap-10 justify-center mx-auto mt-10"
  >
    <h2 class="text-3xl font-semibold text-center">Login Form</h2>
    <div class="lg:w-[70%] sm:w-[60%] w-[95%]  mx-auto">
      <form method="post" action="/login">
        <div class="flex flex-col gap-4">
          <label for="username">Username</label>
          <input
            type="text"
            name="username"
            class="border-2 rounded-md px-8 py-2"
            placeholder="Enter username"
            required
          />
        </div>
        <div class="flex flex-col gap-4">
          <label for="password">Password</label>
          <input
            type="password"
            name="password"
            id="password"
            class="border-2 rounded-md px-8 py-2"
            placeholder="Enter password"
            required
          />
        </div>
        <div class="mt-4">
          <button class="bg-green-600 text-white rounded-lg py-2 px-4">
            Signin
          </button>
        </div>
      </form>
    </div>
  </div>
</body>
